@import 'variables.styl';
@import 'mixins.styl';

.skills-container
	margin-top: 2rem

.skill-details-container
	background: white
	margin-top: -100rem
	min-height: 10rem
	padding: 1rem 1rem 3rem 1rem
	position: fixed
	width: 30%
	margin-left: 35%
	z-index: 999
	transition(all 0.5s ease-in-out)

	strong
		color: main-color

.in
	margin-top: 10rem

.skill-details-container.active
	margin-top: 0

.skill-title
	text-transform: uppercase

.skill-description
	margin-top: 1rem

.close-btn
	cursor: pointer
	color: white
	background-color: main-color
	text-align: center
	line-height: 1.4rem
	padding: 0.25rem 1rem
	position: absolute
	right: 1rem
	bottom: 1rem
	vertical-align: middle
	text-decoration: none
	font-weight: bold
	display: inline-block
	opacity: 0.75
	transition(opacity 2s)

.skill-details-container.tech p strong
	color: main-color

.close-btn.soft
	background-color: main-color

.close-btn:hover
	opacity: 1

.skill-details-container.soft p strong
	color: main-color

.close-btn.tech
	background-color: main-color

.skill-details-container
	border: 2px solid main-color

.gray-overlay:not(.open)
	display: none

.gray-overlay
	position: fixed
	display: inline-block;
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-color: rgba(127, 127, 127, 0.5)
	z-index: 100
	margin: 0
	display: flex
	align-content: center
