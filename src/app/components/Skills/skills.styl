@import '~styles/variables.styl'
@import '~styles/mixins.styl'

.skill-content
    background: main-color

.skill-content:hover
    opacity: 0.75

.skill-content
    text-transform: uppercase

.skill-content strong
    display: inline-block
    margin: 0.25em auto

.rectangle
    margin: 0.5em 1em
    cursor: pointer
    float: left

.rectangle .skill-content
    margin: 0
    padding: 2em

.rectangle .skill-content .skill-name
    color: white

.skill
    font-size: 12px
    text-align: center

.skills-title::before
    background-cover('./skills-icon.png')
