@import 'variables.styl'
@import 'mixins.styl'

body
    font-family: Impact, 'Arial Narrow Bold', sans-serif
    opacity: 0
    min-height: 89em
    width: 100%
    position: relative
    text-align: center
    background-color: black
    transition(opacity 2s)

.opaque, .custom-btn:hover
    opacity: 1

h1, h2
    text-transform: uppercase

*
    margin: 0
    padding: 0
    color: #333333

.hidden, .collapsed
    display: none

#container
    background: url('../assets/cv-background.png')
    background-size: 100% 100%
    background-repeat: no-repeat
    display: inline-block
    position: relative
    margin: 5em 0
    width: 65em
    height: 100%
    text-align: left
    padding-bottom: 3em

.link::before {
    content: ''
    height: 14px
    width: 14px
    margin-right: 2px
    display: inline-block
    background: url('../assets/link-icon.png')
    background-size: cover
}

.link.hover-highlight, .hover-highlight
    transition(color 2s)

.link.hover-highlight:hover, .hover-highlight:hover
    color: custom-red

.no-bullets
    list-style: none

.cv-component
    margin: 3em 2em 0 2em
    position: relative

.bottom-dashed
    border-bottom: 2px dashed lightgray

.section-title
    border-bottom: 2px solid #333333
    margin-left: 2.5em

.section-title::before
    content: ''
    position: absolute
    height: 32px
    width: 32px
    left: 0

.timespan
    color: gray
    font-weight: bold
    font-size: 14px

.pull-left
    float: left

.pull-right
    float: right

.column-1, .column-2
    width: 31em

.clearfix::after
    content: ' '
    display: block
    height: 0
    clear: both
    visibility: hidden

.navigation
    position: absolute
    display: inline-block
    top: 1em
    right: 1em
    z-index: 999
    transition(visibility 1s ease-in-out)

.menu-img
    height: 2em
    width: 2em

.menu
    position: relative
    top: -20em
    transition(all 0.5s .25s ease-in-out)

.navigation:hover .menu
    transform(translate(0, 20em))

.navigation:hover .menu-img
    visibility: hidden

.custom-btn
    display: block
    padding: 1em
    background-color: custom-blue
    color: white
    font-weight: bold
    cursor: pointer
    border: 1px solid gray
    text-decoration: none
    opacity: 0.75
    z-index: 9999
    transition(opacity 2s)

.custom-btn:active
    border: 1px solid white

.gray-overlay
    content: ' '
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: gray
    opacity: 0.5
