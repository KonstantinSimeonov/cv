<section class="cv-component education-component">
    <h2 class="section-title">Education</h2>
    <ul>
        {{#each educations}}
        <li class="bottom-dashed no-bullets">
            <h4 class="education-title">{{educationTitle}}</h4>
            <p class="location">@ {{location}}</p>
            <img class="date-icon" src="/public/assets/date-icon.jpg" alt="date-icon">
            <time class="timespan">
                {{from}} - {{to}}
            </time>
            {{#if certificateUrl}}
            <p>Certificate link: <em><a href="{{certificateUrl}}" class="link hover-highlight" target="_blank">{{linkText}}</a></em></p>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</section>